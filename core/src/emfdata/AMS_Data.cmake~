set(CMAKE_CXX_FLAGS "")
set(CMAKE_CXX_FLAGS_DEBUG "-Wall -g -DDEBUG")
set(CMAKE_CXX_FLAGS_RELEASE "-Wall -O3 -funroll-loops")

set(AMS_Data_SOURCES
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data.cpp
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/AMS_DataPackage.cpp
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/AMS_DataFactory.cpp
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/AMS_DataPackageImpl.cpp
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/AMS_DataFactoryImpl.cpp
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/Application.cpp
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/ApplicationImpl.cpp
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/ListApplications.cpp
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/ListApplicationsImpl.cpp
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/ListApplicationsOp.cpp
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/ListApplicationsOpImpl.cpp
   )
   
set(AMS_Data_HEADERS
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data.hpp
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data_forward.hpp
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/AMS_DataPackage.hpp
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/AMS_DataFactory.hpp
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/Application.hpp
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/ListApplications.hpp
    ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/ListApplicationsOp.hpp
   )

install(FILES ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data.hpp DESTINATION include/emf4cpp/)
install(FILES ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data_forward.hpp DESTINATION include/emf4cpp/)
install(FILES ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/AMS_DataFactory.hpp DESTINATION include/emf4cpp/AMS_Data)
install(FILES ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/AMS_DataPackage.hpp DESTINATION include/emf4cpp/AMS_Data)   
install(FILES ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/Application.hpp DESTINATION include/emf4cpp/AMS_Data)
install(FILES ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/ListApplications.hpp DESTINATION include/emf4cpp/AMS_Data)
install(FILES ${CMAKE_CURRENT_SOURCE_DIR}/AMS_Data/ListApplicationsOp.hpp DESTINATION include/emf4cpp/AMS_Data)
   
include_directories(${CMAKE_CURRENT_SOURCE_DIR} /home/keo/Bureau/depot_git_edf/vishnu/core/deps/emf_bin/../include/emf4cpp /home/keo/Bureau/depot_git_edf/vishnu/core/deps/emf_bin/../include/emf4cpp)

add_library(emf4cpp-AMS_Data SHARED ${AMS_Data_HEADERS} ${AMS_Data_SOURCES})
set_target_properties(emf4cpp-AMS_Data PROPERTIES VERSION 0.0.1 SOVERSION 1)

install(TARGETS emf4cpp-AMS_Data DESTINATION lib)

